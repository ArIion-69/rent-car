@import 'reset.styl'

$black = #121212;
$red = #b70223
$white = #fff
$grey = #eee

body
    font-family: "Poppins", sans-serif;
    font-weight: 100;
    font-style: normal;
    
.container 
    max-width: 1720px
    margin: auto
.container--second
    max-width: 1430px
    margin: auto

.container--another
    max-width: 1288px
    margin: auto

a
    text-decoration:none


// header start
.header
    background:$black
    padding: 10px 0px
    &-wrapper 
        display: flex
        justify-content: space-between
        align-items: center
        .logo
            font-weight: 600;
            font-size: 20px;
            letter-spacing: 0.05em;
            color: #fff;
            font-family: "Orbitron", sans-serif !important;
            span
                color: #d93f21;
        .header-contact
            position relative
            display: flex
            align-items: center
            &__text
                display: block
                color: $white
                margin-right: 40px
                font-weight: 500;
                &:first-child:after
                    position: absolute
                    top: 50%; 
                    left: -87px
                    transform: translateY(-50%); 
                    content: ""
                    display: block
                    width 80px
                    height 16px
                    background url('/static/img/icon/star-ico.svg') no-repeat center
                    background-repeat: repeat-x;
                    background-size: 16px 16px;
            &__link
                font-weight: 600;
                font-size: 16px;
                color: $white;
                padding: 16px 30px
                display: inline-block
                border-radius:20px
                background $red
                gap: 0 10px
                margin-right: 10px
                &:last-child
                    margin-right: 0px
// header end

// hero start
.hero
    background: url('/static/img/hero-bg.jpg') no-repeat center center / cover , rgba(0, 0, 0, 0.3); 
    width 100%
    height 90vh
    &-wrapper
        padding-top: 95px
        display: flex
        justify-content: space-between
        .hero-content 
            padding-top: 10px
            max-width: 617px
            display: inline-block
            &-title
                font-weight: 600;
                font-size: 84px;
                text-transform: uppercase;
                color: $white;
                margin-bottom: 10px
                letter-spacing 3px
            &-wrapper
                display: flex
                margin-bottom: 60px
                img
                    margin-right 20px
                &__text
                    &-title
                        font-weight: 600;
                        font-size: 24px;
                        text-transform: capitalize;
                        color: $white;
                        &:last-child
                            font-weight: 400;
                            font-size: 16px;
                            color: #cacaca;
            ul
                list-style none
                margin: 0 0 60px 0
                padding-left: 34px
                li
                    position relative
                    color: $white
                    font-weight: 600;
                    font-size: 16px;
                    margin-bottom: 7px;
                    &:after
                        position: absolute
                        content: ""
                        display block
                        width 16px
                        height 2px
                        background $white
                        top: 50%
                        left: -27px
                        transform: translateY(-50%)
        .hero-form
            max-width: 561px
            padding: 30px
            background: rgba(18, 18, 18, 0.5)
            border-radius: 20px
            &__title
                font-weight: 600
                font-size: 32px
                text-transform: capitalize
                text-align: center
                color: #fff
            &__subtitle
                display: block
                font-weight: 400
                font-size: 16px
                text-align: center
                color: #b3b3b3
                padding-bottom 20px
            form
                display: grid
                gap: 10px
                input
                    width 100%
                    border-radius: 20px
                    padding: 25.5px 30px
                    &::placeholder
                        font-weight: 400
                        font-size: 16px
                        line-height: 120%
                        color: #7d7d7d
                .form-btn
                    border-radius: 20px
                    padding: 24px 0
                    border: none
                    background: #b70223
                    font-weight: 700
                    font-size: 18px
                    line-height: 120%
                    text-align: center
                    color: #fff
                    cursor pointer
                    
            &__note
                padding-top: 20px
                font-weight: 400
                font-size: 14px
                color: #cacaca
.hero-compony
    background: #f2f2f2
    padding: 30px 0
    margin-bottom: 100px
// hero end
    
main
//rank start
    .rank
        margin-bottom: 77px
        text-align: center
        &__title
            font-weight: 600
            font-size: 48px
            text-transform: capitalize
            color: #121212
            margin-bottom: 16px
        &__subtitle
            font-weight: 300;
            font-size: 20px;
            color: #121212;
            position relative
            display: inline-block
            margin-bottom: 50px
            &:after
                content: ""
                position: absolute
                top: 50%;
                right: calc(100% + 10px);
                transform: translateY(-50%); 
                display: block
                width 80px
                height 16px
                background url('/static/img/icon/star-ico.svg') no-repeat center
                background-repeat: repeat-x;
                background-size: 16px 16px;
        &-wrap
            padding: 40px
            background: linear-gradient(to right, red 37.5%, black 30%);
            position relative
            &:after
                content: ''
                position: absolute
                top: -26px
                left: 37.5%
                transform: translateX(-37.5%);
                width 196px
                height 245px
                display block
                background: url('/static/img/dealers-board.png')
                background-size: cover
            .rank-wrapper
                display: flex
                align-items: center
                justify-content: space-between
                img
                    margin-left: 100px  
            .rank-content
                max-width:359px 
                position relative
                padding-left: 56px
                text-align: start
                margin-right: 122px
                &:after
                    position: absolute
                    content: ''
                    background: url('/static/img/icon/cup-ico.svg')
                    display: block
                    width 40px
                    height 40px
                    top: 0
                    left: 0px
                    
                &-title
                    font-weight: 600;
                    font-size: 24px;
                    text-transform: capitalize;
                    color: #fff;
                    margin-bottom: 20px
                &-subtitle
                    font-weight: 500;
                    font-size: 15px;
                    color: #fff;
//rank end

//about start
    .about
        margin-bottom: 100px
        &__title
            font-weight: 600;
            font-size: 48px;
            text-transform: capitalize;
            text-align: center;
            color: #121212;
            margin-bottom: 50px
        &-wrapper
            display: grid
            grid-template-columns: repeat(4,1fr)
            gap: 20px

        .about-item
            padding 30px
            border: 1px solid #cacaca;
            border-radius: 20px;
            text-align: center   
            img
                margin: auto
                margin-bottom: 24px
            &-title
                font-weight: 300;
                font-size: 18px;
                text-align: center;
                color: #121212;
//about end

//quate

    .quote
        margin-bottom: 100px
        display: flex
        justify-content: space-between;
        &-form
            padding: 60px 140px  60px 246px
            background #000
            max-width: 950px
            border-radius: 0 20px 20px 0;
            margin-right: 20px
            &__title 
                font-weight: 600;
                font-size: 32px;
                text-transform: capitalize;
                text-align: center;
                color: #fff;
            &__suptitle
                font-weight: 400;
                font-size: 16px;
                text-align: center;
                color: #b3b3b3;
                margin-bottom: 40px
            form
                display flex
                flex-direction: column;
                input
                    width 100%
                    border-radius: 20px
                    padding: 25.5px 30px
                    margin-bottom: 20px
                    &::placeholder
                        font-weight: 400
                        font-size: 16px
                        line-height: 120%
                        color: #7d7d7d
                .form-btn
                    font-weight: 700;
                    font-size: 18px;
                    line-height: 120%;
                    text-align: center;
                    color: #fff;
                    background: #b70223;
                    border-radius: 20px;
                    padding: 24px 0;
                    border: none
        &-image
            border-radius: 20px 0 0 20px;
            max-width: 950px;
            max-height: 450px;
            background  #b70223;
//quate


//comparison

.comparison
    margin-bottom: 100px
    &-title
        font-weight: 600;
        font-size: 48px;
        text-transform: capitalize;
        text-align: center;
        color: #121212;
        margin-bottom 16px
    &-suptitle
        font-weight: 400;
        font-size: 16px;
        text-align: center;
        color: #7d7d7d;
        margin-bottom 50px
    ul
        padding: 0
        margin: 0 0 30px 0
        display flex
        justify-content: space-between
        li
            border-radius: 20px;
            padding: 24px 54px;
            background: #eee;
            list-style none
            a
                font-weight: 400;
                font-size: 18px;
                color: #121212;
    &-content
        display: flex
        align-items: baseline;
        justify-content: space-between
        margin-bottom 20px
        &__item
            max-width: 560px
            width: 100%;
            &-title 
                font-family: "Orbitron", sans-serif !important;
                font-weight: 600;
                font-style: normal;
                font-size: 20px;
                letter-spacing: 0.05em;
                color: #12121
                border-bottom: 1px solid #b3b3b3;
                padding: 0px 0px 16px 0px;
                text-align: center
                margin-bottom: 24px
                span
                    color: #d93f21;
            &-title2
                font-weight: 500;
                font-size: 20px;
                letter-spacing: 0.05em;
                text-align: center;
                color: #121212;
                border-bottom: 1px solid #b3b3b3;
                padding: 0px 0px 16px 0px;
                margin-bottom: 24px
            ul
                display: flex
                flex-direction: column;
                margin: 0 
                li
                    background none
                    border: 1px solid #b3b3b3;
                    border-radius: 20px;
                    padding: 24px 30px;
                    display: flex
                    justify-content: space-between
                    width 100%
                    margin-bottom: 10px
                    span
                        font-weight: 400;
                        font-size: 16px;
                        color: #121212;
        &__center-item 
            max-width: 270px
            width 100%
            &_title
                display: block
                font-weight: 600;
                font-size: 40px;
                text-transform: capitalize;
                text-align: center;
                color: #7d7d7d;
            &_suptitle
                display: block
                font-weight: 500;
                font-size: 16px;
                text-transform: uppercase;
                text-align: center;
                color: #7d7d7d;
                margin-bottom: 32px
            ul
                display: flex
                flex-direction: column;
                margin: 0 
                li
                    font-weight: 500;
                    font-size: 24px;
                    text-transform: capitalize;
                    text-align: center;
                    color: #b70223;
                    padding: 0
                    background none
                    margin-bottom: 46px
                    &:nth-last-child(5)
                        margin-bottom: 20px
                    &:first-child
                        color: #7d7d7d;
        &-bottom
            display: flex
            justify-content: space-between
            align-items: center
            p
                font-weight: 400;
                font-size: 14px;
                color: #7d7d7d;
                max-width: 560px
            ul
                margin: 0
                display: contents;
                li
                    background #000
                    padding: 23px 30px
                    display flex
                    justify-content: space-between
                    max-width: 560px
                    width 100%
                    span
                        display: block
                        font-weight: 400;
                        font-size: 18px;
                        color: #fff;
//comparison

//promo

.promo
    background url('/static/img/promo-bg.jpg') no-repeat center center / cover
    padding: 60px 0 80px 0
