//card
    .card
        margin-bottom: 100px
        align-items: center
        display: flex
        justify-content: space-between
        &-item
            display flex
            align-items: center 
            max-width: 277px;
            width 100%
            position relative
            &:after
                content: ''
                position: absolute
                left: -100px
                width 75px
                height 0
                border: 1px solid #cacaca;
                transform: rotate(-90deg);
            &:before
                content: ''
                position: absolute
                right: -82px
                width 75px
                height 0
                border: 1px solid #cacaca;
                transform: rotate(-90deg);
            img
                margin-bottom: 31px;
            &-content
                margin-left: 25.72px
                &__title
                    font-weight: 400;
                    font-size: 32px;
                    letter-spacing: 0.05em;
                    color: #121212;
                    display: block
                &__subtitle
                    font-weight: 300;
                    font-size: 17px;
                    color: #121212;
            &__line
                width: 1px;
                height 75px
                border: 1px solid #cacaca;
                display: inline-block
            &__line1
                width: 75px;
                height 0
                margin-left: -28px;
                margin-right: 31px;
                border: 1px solid #cacaca;
                display: inline-block
