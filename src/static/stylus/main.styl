@import 'reset.styl'

$black = #121212;
$red = #b70223
$white = #fff
$grey = #eee

body
    font-family: "Poppins", sans-serif;
    font-weight: 100;
    font-style: normal;
    
.container 
    max-width: 1720px
    margin: auto
.container--second
    max-width: 1430px
    margin: auto

.container--another
    max-width: 1288px
    margin: auto

a
    text-decoration:none


// header start
.header
    background:$black
    padding: 10px 0px
    &-wrapper 
        display: flex
        justify-content: space-between
        align-items: center
        .header-contact
            position relative
            display: flex
            align-items: center
            &__text
                display: block
                color: $white
                margin-right: 40px
                font-weight: 500;
                &:first-child:after
                    position: absolute
                    top: 50%; 
                    left: -87px
                    transform: translateY(-50%); 
                    content: ""
                    display: block
                    width 80px
                    height 16px
                    background url('/static/img/icon/star-ico.svg') no-repeat center
                    background-repeat: repeat-x;
                    background-size: 16px 16px;
            &__link
                font-weight: 600;
                font-size: 16px;
                color: $white;
                padding: 16px 30px
                display: inline-block
                border-radius:20px
                background $red
                gap: 0 10px
                margin-right: 10px
                &:last-child
                    margin-right: 0px
// header end

// hero start
.hero
    background: url('/static/img/hero-bg.jpg') no-repeat center center / cover , rgba(0, 0, 0, 0.3); 
    width 100%
    height 90vh
    &-wrapper
        padding-top: 95px
        display: flex
        justify-content: space-between
        .hero-content 
            padding-top: 10px
            max-width: 617px
            display: inline-block
            &-title
                font-weight: 600;
                font-size: 100px;
                text-transform: uppercase;
                color: $white;
                margin-bottom: 10px
                letter-spacing 3px
            &-wrapper
                display: flex
                margin-bottom: 60px
                img
                    margin-right 20px
                &__text
                    &-title
                        font-weight: 600;
                        font-size: 24px;
                        text-transform: capitalize;
                        color: $white;
                        &:last-child
                            font-weight: 400;
                            font-size: 16px;
                            color: #cacaca;
            ul
                list-style none
                margin: 0 0 60px 0
                padding-left: 34px
                li
                    position relative
                    color: $white
                    font-weight: 600;
                    font-size: 16px;
                    margin-bottom: 7px;
                    &:after
                        position: absolute
                        content: ""
                        display block
                        width 16px
                        height 2px
                        background $white
                        top: 50%
                        left: -27px
                        transform: translateY(-50%)
        .hero-form
            max-width: 561px
            padding: 30px
            background: rgba(18, 18, 18, 0.5)
            border-radius: 20px
            &__title
                font-weight: 600
                font-size: 32px
                text-transform: capitalize
                text-align: center
                color: #fff
            &__subtitle
                display: block
                font-weight: 400
                font-size: 16px
                text-align: center
                color: #b3b3b3
                padding-bottom 20px
            form
                display: grid
                gap: 10px
                input
                    width 100%
                    border-radius: 20px
                    padding: 25.5px 30px
                    &::placeholder
                        font-weight: 400
                        font-size: 16px
                        line-height: 120%
                        color: #7d7d7d
                .form-btn
                    border-radius: 20px
                    padding: 24px 0
                    border: none
                    background: #b70223
                    font-weight: 700
                    font-size: 18px
                    line-height: 120%
                    text-align: center
                    color: #fff
                    cursor pointer
                    
            &__note
                padding-top: 20px
                font-weight: 400
                font-size: 14px
                color: #cacaca
.hero-compony
    background: #f2f2f2
    padding: 30px 0
    margin-bottom: 100px
// hero end
    
main
//rank start
    .rank
        margin-bottom: 77px
        text-align: center
        &__title
            font-weight: 600
            font-size: 48px
            text-transform: capitalize
            color: #121212
            margin-bottom: 16px
        &__subtitle
            font-weight: 300;
            font-size: 20px;
            color: #121212;
            position relative
            display: inline-block
            margin-bottom: 50px
            &:after
                content: ""
                position: absolute
                top: 50%;
                right: calc(100% + 10px);
                transform: translateY(-50%); 
                display: block
                width 80px
                height 16px
                background url('/static/img/icon/star-ico.svg') no-repeat center
                background-repeat: repeat-x;
                background-size: 16px 16px;
        &-wrap
            padding: 40px
            background: linear-gradient(to right, red 37.5%, black 30%);
            position relative
            &:after
                content: ''
                position: absolute
                top: -26px
                left: 37.5%
                transform: translateX(-37.5%);
                width 196px
                height 245px
                display block
                background: url('/static/img/dealers-board.png')
                background-size: cover
            .rank-wrapper
                display: flex
                align-items: center
                justify-content: space-between
                img
                    margin-left: 100px  
            .rank-content
                max-width:359px 
                position relative
                padding-left: 56px
                text-align: start
                margin-right: 122px
                &:after
                    position: absolute
                    content: ''
                    background: url('/static/img/icon/cup-ico.svg')
                    display: block
                    width 40px
                    height 40px
                    top: 0
                    left: 0px
                    
                &-title
                    font-weight: 600;
                    font-size: 24px;
                    text-transform: capitalize;
                    color: #fff;
                    margin-bottom: 20px
                &-subtitle
                    font-weight: 500;
                    font-size: 15px;
                    color: #fff;
//rank end

//about start
    .about
        margin-bottom: 100px
        &__title
            font-weight: 600;
            font-size: 48px;
            text-transform: capitalize;
            text-align: center;
            color: #121212;
            margin-bottom: 50px
        &-wrapper
            display: grid
            grid-template-columns: repeat(4,1fr)
            gap: 20px

        .about-item
            padding 30px
            border: 1px solid #cacaca;
            border-radius: 20px;
            text-align: center   
            img
                margin: auto
                margin-bottom: 24px
            &-title
                font-weight: 300;
                font-size: 18px;
                text-align: center;
                color: #121212;
//about end

    .card
        margin-bottom: 100px
        align-items: center
        display: flex
        justify-content: space-between
        &-item
            display flex
            align-items: center 
            max-width: 409px;
            width 100%
            img
                margin-bottom: 31px;
            &-content
                margin-left: 25.72px
                margin-right: 41.25px;

                &__title
                    font-weight: 400;
                    font-size: 32px;
                    letter-spacing: 0.05em;
                    color: #121212;
                    display: block
                &__subtitle
                    font-weight: 300;
                    font-size: 17px;
                    color: #121212;
            &__line
                width: 1px;
                height 75px
                border: 1px solid #cacaca;
                display: inline-block
            &__line1
                width: 75px;
                height 0
                margin-left: -28px;
                margin-right: 31px;
                border: 1px solid #cacaca;
                display: inline-block
                
                
                
    //banner
    .banner
        background url('/static/img/contact-info-bg.jpg') no-repeat center center / cover
        padding: 60px 0 80px 0
        margin-bottom: 100px
        &-title
            font-weight: 600;
            font-size: 48px;
            text-transform: capitalize;
            text-align: center;
            color: #fff;
            margin-bottom: 16px
        &-suptitle
            font-weight: 400;
            font-size: 16px;
            text-align: center;
            color: #b3b3b3;
            margin-bottom: 30px
        form
            display flex
            justify-content: center
            input
                margin-right:10px
                background: #fff;
                max-width: 688px
                width 100%
                padding: 16px 30px;
                font-weight: 400;
                font-size: 16px;
                line-height: 120%;
                color: #7d7d7d;
                border-radius: 20px;
                border: none
            .banner-btn
                font-weight: 600;
                font-size: 18px;
                color: #fff;
                background #b70223
                padding: 16px 30px
                border-radius: 20px;
                border: none
    //banner
    
    
    //contact-info 
    
    .contact-info 
        background #fff
        margin-bottom: 100px
        &-title
            font-weight: 600;
            font-size: 48px;
            text-transform: capitalize;
            text-align: center;
            color: #121212;
            margin-bottom: 16px
        &-suptitle
            font-family: var(--font-family);
            font-weight: 400;
            font-size: 16px;
            text-align: center;
            color: #b3b3b3;
            margin-bottom: 50px
        &-wrapper
            display: flex
            flex-wrap: wrap
            justify-content: center
            &__item
                display: flex
                align-items: center
                margin-right: 104px
                &-content 
                    margin-left: 24px
                    &-title
                        font-weight: 600;
                        font-size: 24px;
                        letter-spacing: 0.05em;
                        color: #121212;
                    &-suptitle
                        font-weight: 400;
                        font-size: 14px;
                        color: #7d7d7d;
    //contact-info 
                
                


    // footer start
    
    .footer
        background $black
        &-wrapper
            display: flex
            justify-content: space-between
            align-items: start
            padding: 40px 0 30px 0px
    
        a
            text-align: center
            display: block
            font-weight: 400;
            font-size: 14px;
            text-align: center;
            color: #7d7d7d;
            padding-bottom: 30px
    
    //footer end